{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es7", "dom", "es2016"],
    "allowJs": true,
    "pretty": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@helpers/*": ["src/helpers/*"],
      "@reducers/*": ["src/reducers/*"],
      "@models/*": ["src/models/*"],
      "@core/*": ["src/core/*"],
      "@store/*": ["src/store/*"],
      "@glossy/*": ["src/glossy/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build", "public"]
}
